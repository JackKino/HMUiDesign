<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <Button
        ohos:id="$+id:text_helloworld"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="center"
        ohos:top_margin="20vp"
        ohos:padding="10vp"
        ohos:text="SurfaceProvider"
        ohos:text_size="50"
        />
    <Button
        ohos:id="$+id:tablist_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:text="Tablist"
        ohos:text_size="50"
        />
    <Button
        ohos:id="$+id:list_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:text="UltimateProvider"
        ohos:text_size="50"
        />

    <TableLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:column_count="2"
        ohos:row_count="3"
        ohos:top_margin="5vp"
        ohos:layout_alignment="horizontal_center"

        >
        <Text

            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_weight="1"
            ohos:background_element="#FF0000"
            ohos:layout_alignment="horizontal_center"
            ohos:text=" Hello World 1 "
            ohos:text_size="50"/>

        <!-- 1行2列 -->
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#00FF00"
            ohos:layout_alignment="horizontal_center"
            ohos:text=" Hello World 2 "
            ohos:text_size="50"/>

    </TableLayout>
    <Button
        ohos:id="$+id:listdialog_btn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="horizontal_center"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:text="ListDialog"
        ohos:text_size="50"
        />
</DirectionalLayout>