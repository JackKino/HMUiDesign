<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:start_margin="20vp"
    ohos:top_margin="10vp"
    ohos:orientation="horizontal"
    >

    <Text
        ohos:id="$+id:user_id"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:text_size="50"
        />
    <Text
        ohos:id="$+id:user_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:text_size="50"
        />
    <Text
        ohos:id="$+id:user_last_name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:text_size="50"
        />
    <Text
        ohos:id="$+id:user_age"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:left_margin="20vp"
        ohos:text_size="50"
        />
    <Text
        ohos:id="$+id:user_numbers"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="black"
        ohos:text_size="50"
        />


</DirectionalLayout>